doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Gmail | Connect with your relation 
        style 
            include ../public/assets/css/style.css 

        link(href='https://unpkg.com/boxicons@2.1.2/css/boxicons.min.css',rel='stylesheet')
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css")
    body 
        nav.navbar.navbar-expand-lg.navbar-light.border-bottom(style="background-color:white")
            .container 
                a.navbar-brand(href="/") 
                    //- span.text-primary G
                    //- span.text-danger mail 
                    img(src="https://ssl.gstatic.com/ui/v1/icons/mail/rfr/logo_gmail_lockup_default_1x_r2.png", alt="")
                form(action="", method="get") 
                    .input-group 
                        span.bg-light.border-0.input-group-text(style="border-radius: 10px 0px 0px 10px") 
                            i(class='bx bx-search')
                        input.form-control.border-0.bg-light.shadow-none(size="50", placeholder=" search mail", style="padding:10px; border-radius: 0 10px 10px 0")
                ul.navbar-nav
                    if session.user                    
                        li.nav-item 
                            a.nav-link(href="/logout").btn.btn-light.text-dark logout
                    else 
                        li.nav-item 
                            a.nav-link(href="/").btn.btn-light.me-2.text-dark Create An Account  
                        li.nav-item 
                            a.nav-link(href="/login").btn.btn-light.text-dark Login

        block content
    
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js")
    script(src="https://unpkg.com/boxicons@2.1.2/dist/boxicons.js")